{
    "name": "angular-webpack-core",
    "version": "0.0.0",
    "description": "Angular 5 webpack core",
    "license": "",
    "repository": {
        "type": "GIT",
        "url": ""
    },
    "scripts": {
        "start": "npm run serve",
        "serve": "webpack-dev-server --inline --config config/build/webpack.dev.js --progress --port 3000 --hot",
        "serve:prod": "webpack-dev-server --inline --config config/build/webpack.prod.js --progress --port 3000",
        "build": "rimraf dist && webpack --config config/build/webpack.prod.js --progress --profile --bail",
        "build:dev": "rimraf dist && webpack --config config/build/webpack.dev.js --progress --profile --bail",
        "server": "node config/server/prod-server.js",
        "test": "karma start config/test/karma.conf.js",
        "coverage": "npm run lint && karma start config/test/karma.conf.js --coverage=true",
        "lint": "tslint -c config/tslint.json \"src/app/**/*.ts\"",
        "docs": "typedoc config/typedoc.js src/app/app.component.ts"
    },
    "dependencies": {
        "@angular/animations": "^5.2.1",
        "@angular/common": "^5.2.1",
        "@angular/compiler": "^5.2.1",
        "@angular/core": "^5.2.1",
        "@angular/forms": "^5.2.1",
        "@angular/http": "^5.2.1",
        "@angular/platform-browser": "^5.2.1",
        "@angular/platform-browser-dynamic": "^5.2.1",
        "@angular/router": "^5.2.1",
        "core-js": "^2.5.3",
        "rxjs": "^5.5.6",
        "zone.js": "^0.8.20"
    },
    "devDependencies": {
        "@angularclass/hmr": "^2.1.3",
        "@angularclass/hmr-loader": "^3.0.4",
        "@types/jasmine": "^2.5.54",
        "@types/jasminewd2": "^2.0.3",
        "@types/node": "^6.0.96",
        "angular2-template-loader": "^0.6.2",
        "awesome-typescript-loader": "^3.2.3",
        "codelyzer": "^3.2.2",
        "copy-webpack-plugin": "^4.3.1",
        "css-loader": "^0.28.9",
        "extract-text-webpack-plugin": "^3.0.0",
        "file-loader": "^0.8.5",
        "html-loader": "^0.4.5",
        "html-webpack-plugin": "^2.30.1",
        "istanbul-instrumenter-loader": "^3.0.0",
        "jasmine-core": "^2.6.4",
        "jasmine-spec-reporter": "^4.1.1",
        "karma": "^1.7.1",
        "karma-chrome-launcher": "^2.1.1",
        "karma-cli": "^1.0.1",
        "karma-coverage-istanbul-reporter": "^1.3.3",
        "karma-jasmine": "^1.1.1",
        "karma-jasmine-html-reporter": "^0.2.2",
        "karma-sourcemap-loader": "^0.3.7",
        "karma-webpack": "^2.0.9",
        "live-server": "^1.2.0",
        "loader-utils": "^1.1.0",
        "node-sass": "^4.7.2",
        "protractor": "^5.1.2",
        "reflect-metadata": "^0.1.12",
        "sass-loader": "^6.0.6",
        "stylelint": "^8.4.0",
        "stylelint-webpack-plugin": "^0.10.1",
        "to-string-loader": "^1.1.5",
        "tslint": "^5.7.0",
        "tslint-loader": "^3.5.3",
        "typedoc": "^0.9.0",
        "typescript": "^2.5.3",
        "webpack": "^3.4.1",
